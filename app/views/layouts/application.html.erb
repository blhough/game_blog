<!DOCTYPE html>
<html>
	<head>
		<title>GameBlog</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container-fluid navbar-default" style="color: white; background-color: #437BA8;"> 
			<h1>Game Title</h1>
			<nav class="navbar" style="margin-bottom: 0;">
			    <div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span> 
					</button>
					<!-- <a class="navbar-brand" href="#">WebSiteName</a> -->
			    </div>
			    <!-- top nav bar -->
			    <div class="collapse navbar-collapse" id="myNavbar">
			      <ul class="nav navbar-nav" style="margin-top: 16px;">
			        <li><%= link_to '', root_path, class: "glyphicon glyphicon-home", style:"padding: 3px 16px; margin: 0 8px; color: white;" %></li>
			        <li><%= link_to 'Blog', blogs_path, style:"padding: 3px 16px; margin: 0 8px; color: white;" %></li>
			        <li><a href="#" style="padding: 3px 16px; margin: 0 8px; color: white;">Highscores</a></li> 
			        <li><%= link_to 'FAQs', faqs_path, style:"padding: 3px 16px; margin: 0 8px; color: white;" %></li> 
			      </ul>
			      <ul class="nav navbar-nav navbar-right">
			        <li><a href="#" style="padding: 3px 16px;"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
			        <li><a href="#" style="padding: 3px 16px;"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
			      </ul>
			    </div>
			</nav>
		</div>
		<nav class="navbar">
			<div class="container-fluid" style="background-color: #305979;">
				<!-- top subbar -->
				<%= render partial: "subbar" %>
			</div>
		</nav>
		<div class="container" style="margin: 0 64px;">

			<%= yield %>

		</div>
	</body>
</html>
