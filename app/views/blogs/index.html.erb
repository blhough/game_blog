<p id="notice"><%= notice %></p>
<% if @blogs.count == 0 %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>No Posts</h3>
    </div>
    <div class="panel-body">
      <p>Check back another time for a new post!</p>
    </div>
    <div class="panel-footer">
      <%= link_to 'Add a Post', new_blog_path, class: "admin-btn", role: "button", style: "text-align: right;" %>
    </div>
  </div>

<% end %> <% if @blogs.count > 0 %>
  <div class="panel panel-default">
    <%= link_to 'Destroy', @newestPost, method: :delete, data: { confirm: "Are you sure you'd like to delete @{@newestPost.title}" }, class: "admin-btn" %>
    <div class="panel-heading">
      <h3>Newest Blog Post</h3><p style="text-align: right;"><%= @newestPost.title %></p>
    </div>
    <div class="panel-body">
      <p><%= @newestPost.body.split.first(150) * ' ' + '...'%></p>
    </div>
    <div class="panel-footer">
      <p style="text-align: right; margin: 0;"><%= link_to 'read more', blog_path(@newestPost) %></p>
    </div>
  </div>
<h1>Pervious Posts</h1>
  <% if @blogs.count == 1 %>
    <h2>no other posts</h2>
  <% end %>

<% end %> <% if @blogs.count > 1 %>
  <% @blogs.each do |blog| %>
    <% if blog != @newestPost %>
      <div class="panel panel-default">
      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: "Are you sure you'd like to delete @{blog.title}" }, class: "admin-btn" %>
        <div class="panel-body">
          <h2><%= blog.title %></h2>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
